        <item name="android:translationZ">2dp</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ShadowPadding">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ShadowPaddingNoSideMargin">
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:background">@color/white</item>
    </style>

