<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.vojacekmilan.refereeassistant.results.RegionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_regions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:text="@string/regions"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/list_regions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_regions"
            style="@style/ShadowNoSideMargin" />

        <TextView
            android:id="@+id/text_view_leagues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_regions"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:text="@string/leagues"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/list_leagues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_leagues"
            style="@style/ShadowNoSideMargin" />
    </RelativeLayout>
</ScrollView>