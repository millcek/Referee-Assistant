<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="ShadowPaddingNoSideMargin">
        <item name="android:background">@drawable/shadow_padding_no_side_margin</item>
    </style>

    <style name="ShadowNoSideMargin">
        <item name="android:background">@drawable/shadow_no_side_margin</item>
    </style>

    <style name="Shadow">
        <item name="android:background">@drawable/shadow</item>
    </style>

    <style name="ShadowPadding">
        <item name="android:background">@drawable/shadow_padding</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="ButtonBarButtonStyle" parent="RobotoButtonStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@drawable/button_bar_button</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonBarButtonStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!--<item name="android:textViewStyle">@style/RobotoTextViewStyle</item>-->
    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginRight">@dimen/nav_drawer_margin_offset</item>
    </style>

    <style name="Theme.AppTheme.NavigationDrawer" parent="AppTheme">
        <item name="textAppearanceListItem">@style/Theme.AppTheme.NavDrawerItem</item>
    </style>

    <style name="Theme.AppTheme.NavDrawerItem" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="RadioButtonAnswer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/exam_radiobutton</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:checked">false</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="TextViewQuestion" parent="@style/ShadowPaddingNoSideMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
